 lnst/Devices/RemoteDevice.py | 1 +
 1 file changed, 1 insertion(+)

diff --git a/lnst/Devices/RemoteDevice.py b/lnst/Devices/RemoteDevice.py
index b37391a4..cf1ddb5d 100644
--- a/lnst/Devices/RemoteDevice.py
+++ b/lnst/Devices/RemoteDevice.py
@@ -51,6 +51,7 @@ class RemoteDevice(object):
                             deepcopy(self.__dev_kwargs, memo))
         newone.__netns = self.__netns
         newone._machine = self._machine
+        newone._id = self._id
         newone.ifindex = deepcopy(self.ifindex, memo)
         newone.deleted = deepcopy(self.deleted, memo)
         newone._inited = deepcopy(self._inited, memo)
