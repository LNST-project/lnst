<lnstrecipe>
    <define>
        <alias name="ipv" value="both" />
    </define>
    <network>
        <host id="host1">
            <interfaces>
                <eth id="nic" label="to_switch"/>
                <eth id="tap" label="to_guest"/>
                <ovs_bridge id="ovs_br">
                    <slaves>
                        <slave id="tap" />
                        <slave id="nic" />
                    </slaves>
                    <vlan tag="10">
                        <slaves>
                            <slave id="tap"/>
                        </slaves>
                    </vlan>
                </ovs_bridge>
            </interfaces>
        </host>
        <host id="guest1">
            <interfaces>
                <eth id="guestnic" label="to_guest">
                    <addresses>
                        <address>192.168.10.10/24</address>
                        <address>2002::10:10/112</address>
                    </addresses>
                </eth>
            </interfaces>
        </host>
        <host id="host2">
            <interfaces>
                <eth id="nic" label="to_switch">
                    <params>
                        <param name="driver" value="virtio"/>
                    </params>
                </eth>
                <vlan id="vlan10">
                    <options>
                        <option name="vlan_tci" value="10" />
                    </options>
                    <slaves>
                        <slave id="nic" />
                    </slaves>
                    <addresses>
                        <address>192.168.10.11/24</address>
                        <address>2002::10:11/112</address>
                    </addresses>
                </vlan>
            </interfaces>
        </host>
    </network>

    <task python="virtual_ovs_bridge_vlan_in_host.py" />
</lnstrecipe>
