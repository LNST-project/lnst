                    <slave id="nic1" />
                    <slave id="nic2" />
                </slaves>
                <addresses>
                    <address>1.2.3.4/24</address>
                </addresses>
            </bond>
            <vlan id="vlan10">
                <options>
                    <option name="vlan_tci" value="10" />
                </options>
                <slaves>
                    <slave id="bond" />
                </slaves>
            </vlan>
            <vlan id="vlan20">
                <options>
                    <option name="vlan_tci" value="20" />
                </options>
                <slaves>
                    <slave id="bond" />
                </slaves>
            </vlan>
            <bridge id="br1">
                <slaves>
                    <slave id="vlan10"/>
                    <slave id="tap1"/>
                </slaves>
                <addresses>
                    <address>192.168.10.11/24</address>
                </addresses>
            </bridge>
            <bridge id="br2">
                <slaves>
                    <slave id="vlan20"/>
                    <slave id="tap2"/>
                </slaves>
                <addresses>
                    <address>192.168.20.11/24</address>
