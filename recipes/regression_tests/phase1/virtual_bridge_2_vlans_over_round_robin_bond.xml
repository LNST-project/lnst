        </interfaces>
        </host>
        <host id="guest4">
            <interfaces>
                <eth id="guestnic" label="to_guest4">
                    <addresses>
                        <address>192.168.20.101/24</address>
                    </addresses>
                </eth>
        </interfaces>
        </host>
    </network>

    <task python="virtual_bridge_2_vlans_over_bond.py" />
</lnstrecipe>
